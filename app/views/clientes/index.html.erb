<h1>Lista de clientes</h1>
<%= form_tag clientes_path, :method => 'get' do %>
 <% content_tag :label do %>
  Buscar termino:
   <%= text_field_tag :search, params[:search] %>
   <%= submit_tag "Buscar", :name => nil %>
 <% end %>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>Cedula</th>
      <th>Nombre</th>
      <th>Mail</th>
      <th>Genero</th>
      <th>Fch nacimiento</th>
      <th>Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.cedula %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.mail %></td>
        <td><%= mostrar_genero(cliente.genero) %></td>
        <td><%= cliente.fch_ncto %></td>
        <td><%= cliente.celular %></td>
        <td><%= link_to 'Ver', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Seguro quieres eliminar el archivo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo cliente', new_cliente_path %>
<%= will_paginate @clientes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Clientes: <%= @clientes.count %>
